	<div class="heading"><h1>Plugged In Contacts</h1><br><h2>Search Results</h2></div>

<div id="student_list">

	<% @results.each do |result| %>
	<%= form_tag :search do %>

	<table class = "pretty">
		<tr><th>First Name: </th><td> <%= result.name %></td><td><%= text_field_tag "name", "" %></td></tr>
		<tr><th>Last Name: </th><td> <%= result.last_name %></td><td><%= text_field_tag "last_name", "" %></td></tr>
		<tr><th>Address: </th><td> <%= result.address %></td><td><%= text_field_tag "address", "" %></td></tr>
		<tr><th>E-mail: </th><td> <%= result.email %></td><td><%= text_field_tag "email", "" %></td></tr>
		<tr><th>Home: </th><td> <%= result.home_phone %></td><td><%= text_field_tag "home_phone", "" %></td></tr>
		<tr><th>Cell: </th><td> <%= result.cell %></td><td><%= text_field_tag "cell", "" %></td></tr>
		<tr><th>Dad Work: </th><td> <%= result.dad_work %></td><td><%= text_field_tag "dad_work", "" %></td></tr>
		<tr><th>Mom Work:</th><td> <%= result.mom_work %></td><td><%= text_field_tag "mom_work", "" %></td></tr>
		<tr><th>Dad Cell: </th><td> <%= result.dad_cell %></td><td><%= text_field_tag "dad_cell", "" %></td></tr>
		<tr><th>Mom Cell:</th><td>  <%= result.mom_cell %></td><td><%= text_field_tag "mom_cell", "" %></td></tr>
		<tr><th>Date of Birth: </th><td> <%= result.date_of_birth %></td><td><%= text_field_tag "dob", "" %></td></tr>
		<tr><th>Instruments Played: </th><td> <%= result.instruments_played %></td><td><%= text_field_tag "instruments_played", "" %></td></tr>
		<tr><th>Sessions Participated In:</th><td>  <%= result.sessions_participated_in %></td><td><%= text_field_tag "sessions_participated_in", "" %></td></tr>
		<tr><th>Parent Names: </th><td> <%= result.parent_names %></td><td><%= text_field_tag "parent_names", "" %></td></tr>
		<tr><td><%= link_to 'Show', result %>      
		      <%= link_to 'Edit', eval("edit_#{result.class.name.underscore}_path(result)") %>
		      <%= link_to 'Destroy', result, :confirm => 'Are you sure?', :method => :delete %></td><td></td><td>
		<% [ 'And', 'or' ].each do |andor| %>
			<%= radio_button_tag 'andor', andor, @andor == andor %>
			<%= andor.humanize %>
		<% end %>
		<%= submit_tag "Go" %></td></tr>	</table>
	<% end %>
	<% end %>
	
	</div>

	<p> Phone numbers not searchable </p>
	
	<div id="user_nav">
	<% if user_signed_in? %>
		Signed in as <%= current_user.email %>.  Not You?
		<%= link_to "Sign out", destroy_user_session_path %>
	<% else %>
		<%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>.
	<% end %>
</div>

<% else %>
	<div class = 'error'>
	<p> This page does not exist </p>
	</div>
<% end %>
<% else %>
	<div class = 'error'>
	<p> This page does not exist </p>
	</div>
<% end %>