	<div class="heading"><h1>Plugged In Contacts</h1><br><h2>Search Results</h2></div>

<div id="result_list">

	<% @results.each do |result| %>
	<%= form_tag :others_search do %>

	<table class = "pretty">
		<tr><th>First Name: </th><td> <%= result.first %></td><td><%= text_field_tag "first", "" %></td></tr>
		<tr><th>Last Name: </th><td> <%= result.last %></td><td><%= text_field_tag "last", "" %></td></tr>
		<tr><th>Address: </th><td> <%= result.address1 %></td><td><%= text_field_tag "address1", "" %></td></tr>
		<tr><th>E-mail: </th><td> <%= result.home_email %></td><td><%= text_field_tag "home_email", "" %></td></tr>
		<tr><th>Home: </th><td> <%= result.home_phone %></td><td><%= text_field_tag "home_phone", "" %></td></tr>
		<tr><th>Cell: </th><td> <%= result.mobile_phone %></td><td><%= text_field_tag "mobile_phone", "" %></td></tr>
		<tr><th>Work Phone: </th><td> <%= result.work_phone %></td><td><%= text_field_tag "work_phone", "" %></td></tr>
		<tr><th>Job:</th><td> <%= result.job %></td><td><%= text_field_tag "job", "" %></td></tr>
		<tr><th>Fax: </th><td> <%= result.fax %></td><td><%= text_field_tag "fax", "" %></td></tr>

	<tr><th>Type:</th><td><% Other.column_names.each do |column| %>
		<% if result.send(column) == true %>
			<%= column.humanize %>,
		<% end %>
	<% end %></td>
	<td><%= text_field_tag "type", "" %> </td></tr>

		<tr><td><%= link_to 'Show', result %>      
		      <%= link_to 'Edit', edit_other_path(result) %>
		      <%= link_to 'Destroy', result, :confirm => 'Are you sure?', :method => :delete %></td><td></td><td>
		<% [ 'And', 'or' ].each do |andor| %>
			<%= radio_button_tag 'andor', andor, @andor == andor %>
			<%= andor.humanize %>
		<% end %>
		<%= submit_tag "Go" %></td></tr>	</table>
	<% end %>
	<% end %>
	
	<% if @results.empty? %>
		Make sure you typed the right stuff.
	<% end %>
	
	</div>

	<p> Phone numbers not searchable </p>
	
	<div id="user_nav">
	<% if user_signed_in? %>
		Signed in as <%= current_user.email %>.  Not You?
		<%= link_to "Sign out", destroy_user_session_path %>
	<% else %>
		<%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>.
	<% end %>
</div>

<% else %>
	<div class = 'error'>
	<p> This page does not exist </p>
	</div>
<% end %>
<% else %>
	<div class = 'error'>
	<p> This page does not exist </p>
	</div>
<% end %>
